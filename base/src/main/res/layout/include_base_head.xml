<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_common_head"
    android:background="@color/common_color_1296db"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_head_left"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_head_center"
        android:scaleType="centerInside"
        />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_head_center"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:textSize="@dimen/notification_title_text_size"
        android:textColor="@color/common_white"
        app:layout_constraintHorizontal_weight="8"
        app:layout_constraintTop_toTopOf="@+id/iv_head_left"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head_left"
        app:layout_constraintStart_toEndOf="@+id/iv_head_left"
        app:layout_constraintEnd_toStartOf="@+id/iv_head_right"/>

    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_head_lright"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:visibility="invisible"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/iv_head_left"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head_left"
        app:layout_constraintEnd_toStartOf="@+id/iv_head_right"
        android:scaleType="centerInside"
        />
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_head_right"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/iv_head_left"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head_left"
        app:layout_constraintStart_toEndOf="@+id/tv_head_center"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerInside"
        />

</androidx.constraintlayout.widget.ConstraintLayout>